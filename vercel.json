{
    "rewrites": [
      {
        "source": "/sitemap.xml",
        "destination": "/api/sitemap.xml"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source": "/robots.txt",
        "headers": [
          {
            "key": "Content-Type", 
            "value": "text/plain"
          }
        ]
      }
    ]
  }