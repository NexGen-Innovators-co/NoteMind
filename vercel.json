{
    "headers": [
      {
        "source": "/sitemap.xml",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/xml"
          }
        ]
      },
      {
        "source": "/robots.txt",
        "headers": [
          {
            "key": "Content-Type", 
            "value": "text/plain"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/((?!sitemap\\.xml|robots\\.txt|_next|static|favicon\\.ico).*)",
        "destination": "/index.html"
      }
    ]
  }